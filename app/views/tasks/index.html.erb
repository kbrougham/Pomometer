<h1>Listing tasks</h1>

<% if @tasks.empty? %>
  <h2>You don't have any tasks added yet, please add tasks above.</h2>
<% else %>
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Effort</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.effort %></td>
        <td><%= task.project_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<br />

<%= link_to 'New Task', new_task_path %>
