
<div class='row'>
  <div class='span3'></div>
  <div class='span2'><p id="notice"><%= notice %></p></div>
  <div class='span3'></div>
</div>

<div class='row'>
  <div class='span2'></div>
  <div class='span4'><h1>Project List</h1><h4><%= link_to 'New Project', new_project_path %></h4></div>
  <div class='span2'></div>
</div>

<% @projects.each do |project| %>
<div class='row table_row_setup'>
<% if session[:admin_id] != nil %>
<div class='span2'></div>
  <div class='span4 <%= cycle('alternating_even', 'alternating_odd') -%>'>
    <div class='table_span_setup fifty_percent'><%= link_to project.name, project %></div>
    <div class='table_span_setup'><%= link_to 'Edit', edit_project_path(project) %> -- <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<div class='span2'></div>
<% else %>
  <div class='span3'></div>
  <div class='span2 <%= cycle('alternating_even', 'alternating_odd') -%>'><%= link_to project.name, project %></div>
  <div class='span3'></div>
<% end %>
</div>
<% end %>

<% if @projects.empty? %>
<div class='row'>
  <div class='span3'></div>
  <div class='span2'><em>There are no current projects</em></div>
  <div class='span3'></div>
</div>
<% end %> 


  